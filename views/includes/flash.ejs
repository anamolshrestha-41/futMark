<%if(success && success.length>0) {%>
<div class="flash-message flash-success" role="alert">
    <div class="flash-content">
        <span class="flash-icon">✓</span>
        <span class="flash-text"><%= success %></span>
    </div>
    <button type="button" class="flash-close" onclick="this.parentElement.style.display='none'">&times;</button>
</div> 
<%}%>

<%if(error && error.length>0) {%>
<div class="flash-message flash-error" role="alert">
    <div class="flash-content">
        <span class="flash-icon">⚠</span>
        <span class="flash-text"><%= error %></span>
    </div>
    <button type="button" class="flash-close" onclick="this.parentElement.style.display='none'">&times;</button>
</div> 
<%}%>
