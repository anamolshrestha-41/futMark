<% layout("layout/boilerPlate") %>

<%- include("../includes/navbar", { backUrl: "/notes", pageTitle: "New Note" }) %>

<div class="container">
        <div class="form-card">
            <form action="/notes" method="POST">
                <div class="form-group">
                    <label class="form-label" for="title">Note Title</label>
                    <input class="form-input" type="text" id="title" name="title" placeholder="Contact Info, Important Numbers, etc." required>
                </div>
                
                <div class="form-group">
                    <label class="form-label" for="description">Note Content</label>
                    <textarea class="form-input form-textarea" id="description" name="description" placeholder="Phone numbers, addresses, important details..."></textarea>
                </div>
                <button class="submit-btn" type="submit">Create Note</button>
            </form>
        </div>
    </div>
