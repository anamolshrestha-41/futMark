<% layout("layout/boilerPlate") %>

<div class="header">
    <div class="header-left">
        <a href="/listings" class="back-btn">‚Üê</a>
        <div class="header-title">Edit Match</div>
    </div>
</div>

<div class="container">
    <div class="form-card">
        <form action="/listings/<%= listing._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label class="form-label" for="title">Match Title</label>
                <input class="form-input" type="text" id="title" name="listing[title]" value="<%= listing.title %>" required>
            </div>
            
            <div class="form-group">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-input form-textarea" id="description" name="listing[description]"><%= listing.description %></textarea>
            </div>
            
            <div class="form-group">
                <label class="form-label" for="time">Time</label>
                <input class="form-input" type="text" id="time" name="listing[time]" value="<%= listing.time %>" required>
            </div>
            
            <div class="form-group">
                <label class="form-label" for="date">Date</label>
                <input class="form-input" type="date" id="date" name="listing[date]" value="<%= listing.date.toISOString().split('T')[0] %>" required>
            </div>
            
            <div class="form-group">
                <label class="form-label" for="place">Venue</label>
                <input class="form-input" type="text" id="place" name="listing[place]" value="<%= listing.place %>" required>
            </div>
            
            <div class="form-group">
                <label class="form-label" for="players">Players</label>
                <input class="form-input" type="text" id="players" name="listing[listOfPlayers]" value="<%= listing.listOfPlayers.join(', ') %>" placeholder="Enter player names separated by commas">
            </div>
            
            <button class="submit-btn" type="submit">Update Match</button>
        </form>
    </div>
</div>
