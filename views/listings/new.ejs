<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Match</title>
    <link rel="stylesheet" href="/style.css">
    <style>
        .date-picker {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }
        
        .quick-dates {
            display: flex;
            gap: 8px;
            flex-wrap: wrap;
        }
        
        .quick-date-btn {
            background: #2a2f3e;
            color: #ffffff;
            border: none;
            border-radius: 20px;
            padding: 8px 16px;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s;
        }
        
        .quick-date-btn:hover {
            background: #00d4aa;
            color: #0a0e1a;
        }
        
        .quick-date-btn.active {
            background: #00d4aa;
            color: #0a0e1a;
        }
        
        input[type="date"] {
            position: relative;
        }
        
        input[type="date"]::-webkit-calendar-picker-indicator {
            background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="%2300d4aa" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>') no-repeat;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <div class="header">
        <div class="header-left">
            <a href="/listings" class="back-btn">‚Üê</a>
            <div class="header-title">New Match</div>
        </div>
    </div>

    <div class="container">
        <div class="form-card">
            <form action="/listings" method="POST">
                <div class="form-group">
                    <label class="form-label" for="title">Match Title</label>
                    <input class="form-input" type="text" id="title" name="title" placeholder="Friday Night Futsal"
                        required>
                </div>
                <div class="form-group">
                    <label class="form-label" for="place">Venue</label>
                    <input class="form-input" type="text" id="place" name="place" placeholder="Dreams Sindhu Futsal"
                        required>
                </div>

                <div class="form-group">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-input form-textarea" id="description" name="description"
                        placeholder="Dreams Sindhu Futsal"></textarea>
                </div>

                <div class="form-group">
                    <label class="form-label" for="time">Time</label>
                    <input class="form-input" type="text" id="time" name="time" placeholder="7:00 PM - 8:00 PM"
                        required>
                </div>

                <div class="form-group">
                    <label class="form-label">Date</label>
                    <div class="date-picker">
                        <div class="quick-dates">
                            <button type="button" class="quick-date-btn" data-days="0">Today</button>
                            <button type="button" class="quick-date-btn" data-days="1">Tomorrow</button>
                            <button type="button" class="quick-date-btn" data-days="7">Next Week</button>
                        </div>
                        <input class="form-input" type="date" id="date" name="date" required>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label" for="players">Players</label>
                    <input class="form-input" type="text" id="players" name="players" placeholder="John, Mike, Sarah">
                </div>

                <button class="submit-btn" type="submit">Create Match</button>
            </form>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const dateInput = document.getElementById('date');
            const quickDateBtns = document.querySelectorAll('.quick-date-btn');
            
            // Set minimum date to today
            const today = new Date();
            dateInput.min = today.toISOString().split('T')[0];
            
            quickDateBtns.forEach(btn => {
                btn.addEventListener('click', function() {
                    // Remove active class from all buttons
                    quickDateBtns.forEach(b => b.classList.remove('active'));
                    
                    // Add active class to clicked button
                    this.classList.add('active');
                    
                    // Calculate date
                    const days = parseInt(this.dataset.days);
                    const targetDate = new Date();
                    targetDate.setDate(targetDate.getDate() + days);
                    
                    // Set date input value
                    dateInput.value = targetDate.toISOString().split('T')[0];
                });
            });
            
            // Remove active class when date input is manually changed
            dateInput.addEventListener('change', function() {
                quickDateBtns.forEach(btn => btn.classList.remove('active'));
            });
        });
    </script>
</body>

</html>